<mvc:View
	controllerName="smbproject1.0.controller.SecondPage"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
	height="100%"
>
	<m:Page
		enableScrolling="false"
		class="sapUiContentPadding"
		title="Standort>Chur"
	>
		<m:headerContent>
			<m:DateRangeSelection secondDateValue=""/>
		</m:headerContent>
		<m:content>
			<m:ToolbarSpacer/>
			<m:Toolbar width="">
				<m:content>
					<m:Title
						text="Optionen: "
						level="H2"
					/>
					<m:ComboBox
						id="idSelectStatus"
						placeholder="Status"
						change="onStatusChanged"
					>
						<m:items>
							<core:Item
								key="Ausgeführt"
								text="Ausgeführt"
							/>
							<core:Item
								key="InBearbeitung"
								text="In Bearbeitung"
							/>
							<core:Item
								key="Erfasst"
								text="Erfasst"
							/>
						</m:items>
					</m:ComboBox>
					<m:ComboBox
						id="idSelectCustomer"
						placeholder="Kunde"
						change="onKundeChanged"
					>
						<m:items>
							<core:Item
								key="Customer1"
								text="Kunde1"
							/>
							<core:Item
								key="Customer2"
								text="Kunde2"
							/>
							<core:Item
								key="Customer3"
								text="Kunde3"
							/>
						</m:items>
					</m:ComboBox>
				</m:content>
			</m:Toolbar>
			<Table
				id="orderTable"
				rows="{/ProductCollection}"
				visibleRowCount="5"
				paste="onPaste"
				ariaLabelledBy="title"
			>
				<columns>
					<Column width="20%">
						<m:Label text="Nummer"/>
						<template>
							<m:Text
								text="{Name}"
								wrapping="false"
							/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Status"/>
						<template>
							<m:Input value="{ProductId}"/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Kunde"/>
						<template>
							<m:Label text="{Quantity}"/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Datum"/>
						<template>
							<m:ObjectStatus
								text="{Status}"
								state="{
									path: 'Available',
									formatter: '.formatAvailableToObjectState'
								}"
							/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Betrag"/>
						<template>
							<u:Currency
								value="{Price}"
								currency="{CurrencyCode}"
							/>
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>