<mvc:View
	controllerName="smbproject1.0.controller.SecondPage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	height="100%"
>
	<Page
		id="secondPage"
		class="sapUiContentPadding"
		showNavButton="true"
		navButtonPress=".onPressBackButton"
	>
		<headerContent>
			<Image
				src="img/Logo-SMB.png"
				height="80%"
			/>
			<Title text="Standorte>{orders>SalesOffice}"/>
			<DateRangeSelection secondDateValue=""/>
		</headerContent>
		<content>
			<ToolbarSpacer/>
			<Toolbar width="">
				<content>
					<Title
						text="Optionen: "
						level="H2"
					/>
					<ComboBox
						id="idSelectStatus"
						placeholder="Status"
						change="onStatusChanged"
					>
						<items>
							<core:Item
								key="Ausgeführt"
								text="Ausgeführt"
							/>
							<core:Item
								key="InBearbeitung"
								text="In Bearbeitung"
							/>
							<core:Item
								key="Erfasst"
								text="Erfasst"
							/>
						</items>
					</ComboBox>
				</content>
			</Toolbar>
		</content>
		<content>
			<ScrollContainer>
				<Table
					id="orderTable"
					paste="onPaste"
					ariaLabelledBy="title"
					items="{orders>/Orders}"
				>
					<columns>
						<Column width="5%">
							<Label text="Nummer"/>
						</Column>
						<Column width="25%">
							<Label text="Verkaufsbüro"/>
						</Column>
						<Column width="25%">
							<Label text="Status"/>
						</Column>
						<Column width="25%">
							<Label text="Kunde"/>
						</Column>
						<Column width="10%">
							<Label text="Datum"/>
						</Column>
						<Column width="10%">
							<Label text="Betrag"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem
							type="Active"
							press=".onRowPressed"
						>
							<cells>
								<Text text="{orders>SalesOrder}"/>
								<Text text="{orders>SalesOffice}"/>
								<Text text="{orders>OverallDeliveryStatus}"/>
								<Text text="{orders>SoldToParty}"/>
								<Text text="{orders>SalesOrderDate}"/>
								<Text text="{orders>TotalNetAmount} CHF"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>