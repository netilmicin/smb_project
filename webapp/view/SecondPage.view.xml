<mvc:View
	controllerName="smbproject1.0.controller.SecondPage"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%"
>
	<m:Page
		enableScrolling="false"
		class="sapUiContentPadding"
		title="Standort>Chur"
	>
		<m:headerContent>
			<m:DateRangeSelection
				delimiter="-"
				secondDateValue=""
			>
			</m:DateRangeSelection>
		</m:headerContent>
		<m:content>
			<Table
				rows="{/ProductCollection}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				paste="onPaste"
				ariaLabelledBy="title"
			>
				<columns>
					<Column width="20%">
						<m:Label text="Nummer"/>
						<template>
							<m:Text
								text="{Name}"
								wrapping="false"
							/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Status"/>
						<template>
							<m:Input value="{ProductId}"/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Kunde"/>
						<template>
							<m:Label text="{Quantity}"/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Datum"/>
						<template>
							<m:ObjectStatus
								text="{Status}"
								state="{
									path: 'Available',
									formatter: '.formatAvailableToObjectState'
								}"
							/>
						</template>
					</Column>
					<Column width="20%">
						<m:Label text="Betrag"/>
						<template>
							<u:Currency
								value="{Price}"
								currency="{CurrencyCode}"
							/>
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>