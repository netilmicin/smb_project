<mvc:View
	controllerName="smbproject1.0.controller.Home"
	xmlns="sap.m"
	xmlns:m="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data"
>
	<Page id="home">
		<headerContent>
			<Image
				src="img/Logo-SMB.png"
				height="80%"
			/>
			<Title text="Standorte"/>
			<ToolbarSpacer/>
			<Toolbar>
				<Label
					labelFor="DRS1"
					text="Datum auswählen:"
					width="65%"
				/>
				<DateRangeSelection
					id="DRS1"
					delimiter="{
						path: '/delimiterDRS1'
					}"
					dateValue="{
						path: '/dateValueDRS1'
					}"
					secondDateValue="{
						path: '/secondDateValueDRS1'
					}"
					displayFormat="{
						path: '/dateFormatDRS1'
					}"
				/>
			</Toolbar>
		</headerContent>
		<layout:VerticalLayout
			width="100%"
			class="gridWrapper sapUiSmallMargin"
		>
			<layout:Grid containerQuery="true">
				<f:Card>
					<f:header>
						<card:Header
							title="Chur"
							subtitle="Nr. 2050"
							iconSrc="./img/SMB-Chur.png"
							press=".onChartPressed"
						/>
					</f:header>
					<f:content>
						<VBox
							height="10rem"
							class="sapUiSmallMargin"
							justifyContent="SpaceBetween"
						>
							<HBox justifyContent="SpaceAround">
								<FlexBox
									width="20rem"
									height="10rem"
									alignItems="Start"
									justifyContent="SpaceBetween"
								>
									<viz:Popover id="idPopOver"/>
									<viz:VizFrame
										id="idVizFrame"
										uiConfig="{
											applicationSet: 'fiori'
										}"
										height="100%"
										width="100%"
										vizType="column"
									>
										<viz:dataset>
											<viz.data:FlattenedDataset data="{orders}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition
														name="in Bearbeitung"
														value="{orders>OverallDeliveryStatus}"
													/>
												</viz.data:dimensions>
												<viz.data:dimensions>
													<viz.data:DimensionDefinition
														name="Erfasst"
														value="{orders>OverallDeliveryStatus}"
													/>
												</viz.data:dimensions>
												<viz.data:dimensions>
													<viz.data:DimensionDefinition
														name="Ausgeführt"
														value="{orders>OverallDeliveryStatus}"
													/>
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition
														name="Revenue"
														value="{orders>TotalNetAmount}"
													/>

												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<viz:feeds>
											<viz.feeds:FeedItem
												id="valueAxisFeed"
												uid="valueAxis"
												type="Measure"
												values="Revenue"
											/>
											<viz.feeds:FeedItem
												id="categoryAxisFeed"
												uid="categoryAxis"
												type="Dimension"
												values="Week"
											/>
										</viz:feeds>
									</viz:VizFrame>
								</FlexBox>
							</HBox>
						</VBox>
					</f:content>
				</f:Card>
				<f:Card>
					<f:header>
						<card:Header
							title="St.Moritz"
							subtitle="Nr. 2050"
							iconSrc="./img/SMB-Chur.png"
							press=".onChartPressed"
						/>
					</f:header>
					<f:content>
						<VBox
							height="10rem"
							class="sapUiSmallMargin"
							justifyContent="SpaceBetween"
						>
							<HBox justifyContent="SpaceAround">
								<FlexBox
									width="20rem"
									height="10rem"
									alignItems="Start"
									justifyContent="SpaceBetween"
								>
									<items>
										<m:InteractiveDonutChart>
											<m:segments>
												<m:InteractiveDonutChartSegment
													label="Ausgeführt"
													value="40.0"
													displayedValue="40.0%"
												/>
												<m:InteractiveDonutChartSegment
													label="in Bearbeitung"
													value="21.5"
													displayedValue="21.5%"
												/>
												<m:InteractiveDonutChartSegment
													label="erfasst"
													value="38.5"
													displayedValue="38.5%"
												/>
											</m:segments>
										</m:InteractiveDonutChart>
									</items>
								</FlexBox>
							</HBox>
						</VBox>
					</f:content>
				</f:Card>
				<f:Card>
					<f:header>
						<card:Header
							title="Davos"
							subtitle="Nr. 2050"
							iconSrc="./img/SMB-Chur.png"
							press=".onChartPressed"
						/>
					</f:header>
					<f:content>
						<VBox
							height="10rem"
							class="sapUiSmallMargin"
							justifyContent="SpaceBetween"
						>
							<HBox justifyContent="SpaceAround">
								<FlexBox
									width="20rem"
									height="10rem"
									alignItems="Start"
									justifyContent="SpaceBetween"
								>
									<items>
										<m:InteractiveDonutChart>
											<m:segments>
												<m:InteractiveDonutChartSegment
													label="Ausgeführt"
													value="40.0"
													displayedValue="40.0%"
												/>
												<m:InteractiveDonutChartSegment
													label="in Bearbeitung"
													value="21.5"
													displayedValue="21.5%"
												/>
												<m:InteractiveDonutChartSegment
													label="erfasst"
													value="38.5"
													displayedValue="38.5%"
												/>
											</m:segments>
										</m:InteractiveDonutChart>
									</items>
								</FlexBox>
							</HBox>
						</VBox>
					</f:content>
				</f:Card>
				<f:Card>
					<f:header>
						<card:Header
							title="Lenzerheide"
							subtitle="Nr. 2050"
							iconSrc="./img/SMB-Chur.png"
							press=".onChartPressed"
						/>
					</f:header>
					<f:content>
						<VBox
							height="10rem"
							class="sapUiSmallMargin"
							justifyContent="SpaceBetween"
						>
							<HBox justifyContent="SpaceAround">
								<FlexBox
									width="20rem"
									height="10rem"
									alignItems="Start"
									justifyContent="SpaceBetween"
								>
									<items>
										<m:InteractiveDonutChart>
											<m:segments>
												<m:InteractiveDonutChartSegment
													label="Ausgeführt"
													value="40.0"
													displayedValue="40.0%"
												/>
												<m:InteractiveDonutChartSegment
													label="in Bearbeitung"
													value="21.5"
													displayedValue="21.5%"
												/>
												<m:InteractiveDonutChartSegment
													label="erfasst"
													value="38.5"
													displayedValue="38.5%"
												/>
											</m:segments>
										</m:InteractiveDonutChart>
									</items>
								</FlexBox>
							</HBox>
						</VBox>
					</f:content>
				</f:Card>
			</layout:Grid>
		</layout:VerticalLayout>
	</Page>
</mvc:View>